<div class="admin">
  <div class="container">
    <h2 class="text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field w-full mb-4">
        <%= f.label :email, class: "mb-4" %><br />
        <%= f.email_field :email, class: "w-full", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field w-full mb-4">
        <%= f.label :password, class: "mb-4" %><br />
        <%= f.password_field :password, class: "w-full", autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field w-full mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mb-4">
        <%= f.submit "Log in" , class: "primary-button"%>
      </div>
    <% end %>

    <%= render "admin_users/shared/links" %>
  </div>

</div>